{
  "expo": {
    "name": "Aurea",
    "slug": "aurea",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "backgroundColor": "#0a0a1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aurea.app",
      "infoPlist": {
        "NSContactsUsageDescription": "Aurea needs access to contacts to identify callers.",
        "NSSpeechRecognitionUsageDescription": "Aurea uses speech recognition to transcribe calls."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0a0a1a"
      },
      "package": "com.aurea.app",
      "permissions": [
        "READ_SMS",
        "RECEIVE_SMS",
        "READ_CALL_LOG",
        "READ_PHONE_STATE",
        "READ_CONTACTS",
        "RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-notifications"
    ]
  }
}
