<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_bg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUREA"
                    android:textColor="#FACC15"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We remember so you don't have to"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <!-- Server Connection Status -->
        <TextView
            android:id="@+id/serverStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server: Checking..."
            android:textColor="#888888"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp" />

        <!-- Warning Card (shown when permissions missing) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/warningCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permissions Needed"
                    android:textColor="#FACC15"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aurea needs SMS access to automatically detect events from your messages"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/grantPermissionsButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Grant SMS Permissions"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:backgroundTint="#FACC15" />

                <Button
                    android:id="@+id/defaultSmsButton"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Open App Settings"
                    android:textColor="#FACC15"
                    android:textSize="13sp"
                    android:backgroundTint="#2A2A2A"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Banner (shown when permissions granted) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/activeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1A1A0A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/green_dot"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listening for incoming SMS"
                    android:textColor="#4ADE80"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Today's count -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="#FACC15"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/todayCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Found 0 dates today"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/scanNowButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Scan Now"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:backgroundTint="#FACC15"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- How It Works -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOW IT WORKS"
                    android:textColor="#FACC15"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. SMS arrives → Aurea intercepts it automatically\n2. Message is sent to AI for analysis\n3. If a date/event is found, it appears in your queue\n4. You approve → event goes to Google Calendar"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVENT LOG"
            android:textColor="#FACC15"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp" />

        <!-- Empty state -->
        <TextView
            android:id="@+id/emptyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No events detected yet. Aurea will automatically intercept incoming SMS messages and forward them for AI analysis. Use Scan Now to process your existing messages."
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="visible" />

        <!-- Event log list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventLogRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
